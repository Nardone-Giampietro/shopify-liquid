<div class="accordion" id="accordionExample">
  {% for block in section.blocks %}
    {% if block.type == "faq-block" %}
      <div class="accordion-item">
        <h2 class="accordion-header">
          <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#{{ block.id }}" aria-expanded="true" aria-controls="collapseOne">
            {{ block.settings.question }}
          </button>
        </h2>
        <div id="{{ block.id }}" class="accordion-collapse collapse show" data-bs-parent="#accordionExample">
          <div class="accordion-body">
            {{ block.settings.answare }}
          </div>
        </div>
      </div>
    {% endif %}
    {% endfor %}
</div>

{% schema %}
  {  
    "name": "FAQ",
    "blocks":[
      {
        "type": "faq-block",
        "name": "FAQ Item",
        "settings":[
          {
            "type": "text",
            "label": "Question",
            "id": "question",
            "default": "Write the questions."
          },
          {
            "type": "text",
            "label": "Answare",
            "id": "answare",
            "default": "Write the answare."
          }
        ]
    }
    ],
    "presets":[
      {
        "name": "FAQ"
      }
    ]
  }
{% endschema %}