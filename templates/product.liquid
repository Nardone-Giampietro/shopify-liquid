{% assign product_title = product.title %}
{% assign is_available = true %}
<div>
  <img src={{ product | image_url: width: 100 }}> </img>
{% if product.title == all_products["product-1"].title %}
  <p>This is the most <b>important</b> product</p>
  <p>The name of this product it {{ all_products["product-1"].title }}</p>
{% else %}
  <p>We suggest looking at this product instead:</p>
  <a href={{ all_products["product-1"].url }}><b>Awesome Product</b></a>
{% endif %}

  {% case product.title %}
    {% when all_products["product-1"].title %}
      {% if product.price >= 1000 %}
        <p>The price is very good</p>
      {% endif %}
  {% endcase %}
  
</div>
<div>
  {{ product_title | upcase | remove: ' # 1'}}
  <p>{{ product.price  | money_with_currency | replace: ',', '.'}}</p>
  {% if is_available  %}
    <p>This item is available</p>
  {% endif %}

  {% capture string_of_text %}
    The name of this product is {{ product.title }}. And this is all inside a single variable. Nice.
    {% endcapture %}

  <p>
    {{ string_of_text }}
  </p>

  <h2>
    How to use the increment  tag.
  </h2>
  
</div>